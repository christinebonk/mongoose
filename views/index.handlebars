<h5 id="message"></h5>

{{#each articles}}
	<article>
	<aside>
		<img src={{this.image}} alt={{this.title}}>
	</aside>
	<div class="article-middle">
		<a href="https://www.jacobinmag.com{{this.link}}" target="_blank">
			<h2>{{this.title}}</h2>
		</a>
		<h3>{{this.author}}</h3>
		<p>{{this.summary}}</p>
	</div>
	<div class="article-save">
		<i id="save" class="material-icons {{this.saved}}" data-id={{this._id}}>favorite</i>
	</div>
	</article>
	</article>
{{/each}}